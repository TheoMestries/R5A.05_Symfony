{% extends 'base.html.twig' %}

{% block title %}Modifier SCP-{{ article.scpNumber }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center">Modifier SCP-{{ article.scpNumber }}</h2>
        <hr>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title, 'Titre de l\'article') }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="form-group">
            {{ form_label(form.scpNumber, 'Num√©ro SCP') }}
            {{ form_widget(form.scpNumber, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.scpNumber) }}
        </div>

        <div class="form-group">
            {{ form_label(form.content, 'Contenu de l\'article') }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '10'}}) }}
            {{ form_errors(form.content) }}
        </div>

        <div class="form-group">
            {{ form_label(form.status, 'Statut de l\'article') }}
            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.status) }}
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
